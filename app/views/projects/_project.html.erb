<div class="table-responsive">
  <div ng-init="init()">
	  <div id = "project_{{project.id}}" class = "project" ng-repeat = "project in projects">
		  <div class = "header row">
			  <span class="glyphicon glyphicon-list-alt col-md-1" aria-hidden="true"></span>
			  <div class = "project_name {{project.id}} col-md-10">
				  <span> {{project.name}} </span>
				  <form ng-submit = "UpdateProject(project)">
					  <input class="hidden form-control" type = "text" placeholder="{{project.name}}" ng-model = "editProject.name[project.id]" ng-minlength="1" required>
				  </form>
			  </div>
			  <div class = "manage_project col-md-1">
				  <span class = "edit_project {{project.id}} pull-left">
					  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
				  </span>
				  <span class = "remove_project pull-left" ng-click="DestroyProject(project)">
					  <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
				  </span>
			  </div>
		  </div>
		  <div class="create_task">
			  <span class="glyphicon glyphicon-plus pull-left" aria-hidden="true"></span>
			  <div class="pull-left">
				  <form ng-submit = "AddTask(project)">
					  <div class="input-group">
						  <input type = "text" class="form-control" placeholder="Start typing here to create a task..." ng-model = "newTask.name[project.id]" ng-minlength="1" required>
						  <span class="input-group-btn">
							 <button class="btn btn-default" type = "submit">Add Task</button>
						  </span>
					  </div>
				  </form>
			  </div>
		  </div> 
		  <table class = "table table-striped table-bordered table-hover">
			<tbody ui-sortable="sortableOptions(project.tasks)" ng-model="project.tasks" >
				<%= render "tasks/task" %>
			</tbody>
		  </table>
      </div>     
  </div>
</div>
