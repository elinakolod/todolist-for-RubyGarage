<tr ng-repeat = "task in project.tasks">
	<td>
		<input type='checkbox' ng-checked="{{task.done}}" ng-click='SetDone(task)'>
	</td>
	<td>
		<span ng-class="{'done' : task.done == true}">{{task.name}}</span>
		<span class="deadline">{{ GetDate(task.deadline) | date:'dd.MM.yyyy' : 'UTC' }}</span>
		<div class = "task_fields_{{task.id}} hidden">
			<%= render 'tasks/form' %>
			<%= render 'attachments/attachment' %>
			<%= render 'comments/form' %>
			<%= render 'comments/comment' %>
		</div>
	</td>
	<td class="row">
			<span class = "sort_task col-md-4">
				<span class="glyphicon glyphicon-sort" aria-hidden="true"></span>
			</span>
			<span id="edit_task_{{task.id}}" class = "edit_task col-md-4">
				<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
			</span>
			<span class = "remove_task col-md-4" ng-click="DestroyTask(task, project)">
				<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
			</span>
	</td>
</tr>
